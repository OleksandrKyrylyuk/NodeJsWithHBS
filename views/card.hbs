<h1>Cart</h1>
<div id="card">
	{{#if courses.length}}
		<table>
			<thead>
				<tr>
					<th>Title</th>
					<th>Count</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody>
					{{#each courses}}
					<tr>
						<td>{{title}}</td>
						<td>{{count}}</td>
						<td>
							<button class="btn btn small js-remove" data-id="{{id}}">Remove</button>
						</td>
					</tr>
					{{/each}}
			</tbody>
		</table>
	{{else}}
		<p> Cart is empty</p>
	{{/if}}

	<p><strong>Price: </strong> <span class="price">{{price}}</span></p>
	<form action="/orders" method="post">
		<button type="submit" class="btn btn-primary">Make order</button>
	</form>
</div>